---
import Layout from "@/layouts/Layout.astro";
import DogCatalogContainer from "@/components/dogs/DogCatalogContainer";
import { ThemeToggle } from "@/components/ThemeToggle";
---

<Layout title="AdoptMe - Znajdź przyjaciela">
  <header class="border-b">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <h2 class="text-2xl font-bold dark:text-[rgb(16,185,129)]">AdoptMe</h2>
      <ThemeToggle client:load />
    </div>
  </header>
  <main class="container mx-auto px-4 py-8">
    <section class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Znajdź swojego czworonożnego przyjaciela</h1>
      <p class="text-lg text-muted-foreground">Przeglądaj psy dostępne do adopcji w schroniskach w całej Polsce.</p>
    </section>
    <DogCatalogContainer client:only="react" />
  </main>
</Layout>
